<Window x:Class="Test_ClientOrder.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_ClientOrder"
        mc:Ignorable="d"
        Title="Добавление нового клиента" Background="#FF41B3C3" Height="240" Width="300" 
        ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical">
        <Label Content="Фамилия Имя Отчество" FontSize="14" 
               Margin="5,5,5,0" FontFamily="Trebuchet ms"/>
        <TextBox Margin="5,0" Name="textName"/>
        <Label Content="Адрес" FontSize="14" 
               Margin="5,0" FontFamily="Trebuchet ms"/>
        <TextBox Margin="5,0" Name="textAddress"/>
        <Label Content="Номер телефона" FontSize="14" 
               Margin="5,0" FontFamily="Trebuchet ms"/>
        <TextBox Margin="5,0" Name="textPhone"/>
        <Button Name="btnAdd" Margin="5,5" Content="Добавить" Click="AddEditClient"/>
        <Button Margin="5,0" Content="Отмена" IsCancel="True"/>
    </StackPanel>
</Window>
